<Window x:Class="PracticeTask.View.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeTask.View"
        xmlns:vm="clr-namespace:PracticeTask.ViewModel"
        xmlns:convHeight="clr-namespace:PracticeTask"
        xmlns:convWidth="clr-namespace:PracticeTask"
        mc:Ignorable="d"
        Title="TestWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <convHeight:ConverterSize x:Key="multivalueConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ItemsControl Name="ItemsControl"
                      Grid.ColumnSpan="2"
                      Grid.Row="0"
                      ItemsSource="{Binding Circles}"
                      Visibility="{Binding ItemsControlVisibility}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas x:Name="Canvas">
                        <Ellipse Width="{Binding SizeCircle}"
                                 Height="{Binding SizeCircle}"
                                 PreviewMouseDown="Ellipse_PreviewMouseDown">
                            <Canvas.Left>
                                <MultiBinding Converter="{StaticResource multivalueConverter}">
                                    <Binding Path="X"/>
                                    <Binding ElementName="ItemsControl" Path="ActualWidth"/>
                                </MultiBinding>
                            </Canvas.Left>
                            <Canvas.Top>
                                <MultiBinding Converter="{StaticResource multivalueConverter}">
                                    <Binding Path="Y"/>
                                    <Binding ElementName="ItemsControl" Path="ActualHeight"/>
                                </MultiBinding>
                            </Canvas.Top>
                            <Ellipse.Resources>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Red"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActiveColor}" Value="true">
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Fill" Value="Yellow"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Resources>
                        </Ellipse>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="{Binding TextBlockText}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Visibility="{Binding TextBlockVisible}">
            
        </TextBlock>
        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Начать"
                Visibility="{Binding ButtonStartVisibility}"  
                Command="{Binding Start}"/>
        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Проверить"
                Visibility="{Binding ButtonCheckVisibility}"
                Command="{Binding Check}"/>
        <Button Grid.Column="1"
                Grid.Row="2"
                Content="Закрыть"
                Command="{Binding CloseTest}"/>
    </Grid>
</Window>
