<Window x:Class="PracticeTask.View.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeTask.View"
        xmlns:vm="clr-namespace:PracticeTask.ViewModel"
        xmlns:convHeight="clr-namespace:PracticeTask"
        xmlns:convWidth="clr-namespace:PracticeTask"
        mc:Ignorable="d"
        Title="TestWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <convHeight:ConverterHeight x:Key="ConverterHeight"/>
        <convWidth:ConverterWidth x:Key="ConverterWidth"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ItemsControl Grid.ColumnSpan="2"
                      ItemsSource="{Binding Circles}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <Ellipse Width="{Binding Source={x:Static vm:TestWindowViewModel.W}, Converter={StaticResource ConverterWidth}}"
                                 Height="{Binding Height1, Converter={StaticResource ConverterWidth}, UpdateSourceTrigger=PropertyChanged}"
                                 Canvas.Left="{Binding X}"
                                 Canvas.Top="{Binding Y}"
                                 Fill="Red"/>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
        </ItemsControl>
        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Начать"/>
        <Button Grid.Column="1"
                Grid.Row="2"
                Content="Закрыть"
                Command="{Binding CloseTest}"/>
    </Grid>
</Window>
