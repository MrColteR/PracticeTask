    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--<ContentControl Content="{Binding Circles}"
                        ContentTemplate="{StaticResource Template}"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"/>-->


        <ItemsControl Name="ItemsControl"
                      Grid.ColumnSpan="2"
                      Grid.Row="0"
                      ItemsSource="{Binding Circles}"
                      Visibility="{Binding ItemsControlVisibility}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Name="Canvas" Margin="5" Background="red">

                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--<Viewbox>-->

                    <Viewport3D Width="800"
                                Height="450">
                        <Canvas.Left>
                            <MultiBinding Converter="{StaticResource multivalueConverter}">
                                <Binding Path="X"/>
                                <Binding ElementName="ItemsControl" Path="ActualWidth"/>
                            </MultiBinding>
                        </Canvas.Left>
                        <Canvas.Top>
                            <MultiBinding Converter="{StaticResource multivalueConverter}">
                                <Binding Path="Y"/>
                                <Binding ElementName="ItemsControl" Path="ActualHeight"/>
                            </MultiBinding>
                        </Canvas.Top>
                        <Viewport3D.Camera>
                            <PerspectiveCamera Position="0 0 -3"
                                                       LookDirection="0 0 1"
                                                       UpDirection="0 1 0"
                                                       FieldOfView="100" />
                        </Viewport3D.Camera>
                        <Viewport3D.Children>
                            <ModelVisual3D>
                                <Viewport2DVisual3D>
                                    <Viewport2DVisual3D.Geometry>
                                        <MultiBinding Converter="{StaticResource Converter3D}">
                                            <Binding Path="SizeCircle"/>
                                            <Binding Path="X"/>
                                            <Binding Path="Y"/>
                                            <Binding Path="Z"/>
                                            <Binding ElementName="Canvas" Path="ActualWidth"/>
                                            <Binding ElementName="Canvas" Path="ActualHeight"/>
                                        </MultiBinding>
                                    </Viewport2DVisual3D.Geometry>
                                    <Viewport2DVisual3D.Material>
                                        <MaterialGroup>
                                            <DiffuseMaterial Brush="Black" />
                                            <EmissiveMaterial Brush="LightGray" />
                                        </MaterialGroup>
                                    </Viewport2DVisual3D.Material>
                                </Viewport2DVisual3D>
                            </ModelVisual3D>
                        </Viewport3D.Children>
                    </Viewport3D>
                    <!--</Viewbox>-->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="{Binding TextBlockText}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Visibility="{Binding TextBlockVisible}">
        </TextBlock>
        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Начать"
                Visibility="{Binding ButtonStartVisibility}"  
                Command="{Binding Start}"/>
        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Проверить"
                Visibility="{Binding ButtonCheckVisibility}"
                Command="{Binding Check}"/>
        <Button Grid.Column="1"
                Grid.Row="2"
                Content="Закрыть"
                Command="{Binding CloseTest}"/>
    </Grid>
</Window>
